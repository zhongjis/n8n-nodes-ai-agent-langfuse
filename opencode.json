{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"n8n-mcp": {
			"type": "local",
			"command": [
				"docker",
				"run",
				"-i",
				"--rm",
				"--init",
				"-e",
				"MCP_MODE=stdio",
				"-e",
				"LOG_LEVEL=error",
				"-e",
				"DISABLE_CONSOLE_OUTPUT=true",
				"-e",
				"N8N_API_URL=https://n8n.zshen.me",
				"-e",
				"N8N_API_KEY=",
				"ghcr.io/czlonkowski/n8n-mcp:latest"
			],
			"enabled": true
		},
		"context7": {
			"type": "remote",
			"url": "https://mcp.context7.com/mcp",
			"headers": {
				"CONTEXT7_API_KEY": ""
			},
			"enabled": true
		}
	}
}
